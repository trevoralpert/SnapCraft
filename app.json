{
  "expo": {
    "name": "SnapCraft",
    "slug": "snapcraft",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "snapcraft",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#8B4513"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.snapcraft.app",
      "infoPlist": {
        "NSCameraUsageDescription": "SnapCraft needs camera access to capture craft photos and videos for documentation and sharing.",
        "NSMicrophoneUsageDescription": "SnapCraft needs microphone access to record audio with craft videos.",
        "NSPhotoLibraryUsageDescription": "SnapCraft needs photo library access to save and share your craft documentation."
      },
      "runtimeVersion": "1.0.0"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#8B4513"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.snapcraft.app",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_EXTERNAL_STORAGE"
      ],
      "runtimeVersion": {
        "policy": "appVersion"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-video",
      "expo-dev-client"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "72e88f77-718c-421c-92fe-b06df1f71dcf"
      }
    },
    "owner": "trevr217",
    "updates": {
      "url": "https://u.expo.dev/72e88f77-718c-421c-92fe-b06df1f71dcf"
    }
  }
}
